fira-type(weight, sx)
  @font-face
    font-family 'Fira Code'
    src url('/etc/fonts/eot/FiraCode-' + sx + '.eot')
    src url('/etc/fonts/eot/FiraCode-' + sx + '.eot') format('embedded-opentype'),
        url('/etc/fonts/woff2/FiraCode-' + sx + '.woff2') format('woff2'),
        url('/etc/fonts/woff/FiraCode-' + sx + '.woff') format('woff'),
        url('/etc/fonts/ttf/FiraCode-' + sx + '.ttf') format('truetype')
    font-weight weight
    font-style normal

fira-type(300, 'Light')
fira-type(400, 'Regular')
fira-type(500, 'Medium')

type-fira = 'Fira Code', Courier, monospace
type-opensans = 'Open Sans', 'Helvetica Neue', 'Helvetica', sans-serif
type-karla = 'Karla', 'Helvetica Neue', 'Helvetica', sans-serif

.small-caps
  font-size .9em
  line-height 1em

.pull-double
  margin-left -.38em
.push-double
  margin-right .38em

.pull-single
  margin-left -.15em
.push-single
  margin-right .15em

.pull-T, .pull-V, .pull-W, .pull-Y
  margin-left -.07em
.push-T, .push-V, .push-W, .push-Y
  margin-right .07em

.pull-O, .pull-C, .pull-o, .pull-c
  margin-left -.04em
.push-O, .push-C, .push-o, .push-c
  margin-right .04em

.pull-A
  margin-left -.03em
.push-A
  margin-right .03em

