// noop.pw
@require _solarized
@require _typeface
@require _axis

body.vita
  // background #eee
  letter-spacing 0
  padding 0

  @media print
    background $white

  main
    max-width 800px
    margin 0 auto
    background #fff
    padding 20px 50px 0
    color $base03
    position relative
    font 14px/1.5em type-karla


    @media print
      font 13px/1.3em type-karla
      padding 0

    &:before
      content ' '
      top 0
      z-index 10
      left 50px
      right 50px
      height 10px
      background $blue
      position absolute
      @media(max-width 768px)
        left 30px
        right 30px

      @media print
        display none

    @media(max-width 768px)
      padding 20px 30px 0

  a, span
    position relative
    i
      position absolute
      left -1.8em
      color $base0
      opacity .5
  a
    color $base03
    border 0
    &:after
      content ''
      position absolute
      background $base03
      bottom -1px
      right 0
      height 1px
      width 8px
      // transition .1s width
      @media print
        display none
    &:hover
      background alpha($base03, .1)
      &:after
        width 100%

  h1, h2, h3
    font-family type-karla
    color $base02
    font-weight 600

  p, dl, dd, h1, h2, h3
    margin 0
  ul
    reset-list()

  code
    padding 2px 5px
    font-family type-fira
    border-radius 2px
    background alpha($base0, .2)

    @media print
      background transparent
      padding 0

  dl
    div
      display flex
    dt
      width 80px
      font-weight 600

  header
    h1
      font-weight 400
      margin 20px 0 10px
      span
        font-weight 600

  section
    h1
      color $blue
      display inline-block
      text-transform uppercase
      font-size 1.1em
      letter-spacing 1px
      margin 20px 0 10px
      position relative
      &:before
        content ' '
        position absolute
        width calc(100% - 1px)
        height 2px
        margin-top -2px
        border-radius 2px
        background $blue
    h2
      font-size 1.2em

  section.xp, section.edu, section.talks, section.open_source, section.publications
    > ul > li
      display flex
      margin-bottom 20px
      h3
        font-size 1.2em
        letter-spacing .5px
        font-weight 500
      aside
        width 30%
        margin-right 20px
        flex-shrink 0
        p.location
          margin 5px 0
        p.dates
          font-weight 500
          font-family type-fira
          margin 5px 0
          span.duration
            font-weight 300
            font-size .9em
            display block
        p.position
          border-left 3px solid $blue
          line-height normal
          margin 5px 0
          padding-left 9px
          text-align left
          font-weight 600
        ul.tags
          padding-top 12px
          color $base02
        i
          opacity .5

      .image
        padding-top 15px
        width 550px


      div.description
        // text-align justify
        h3, p
          margin-bottom 10px

        ul
          list-style disc
          padding 0 10px
          margin 0

          li
            list-style inherit

      @media screen and (max-width 768px)
        display block
        margin 0 -30px
        padding 10px 30px
        &:nth-of-type(2n)
          background tint($cyan, 60%)
        &:nth-of-type(2n + 1)
          background tint($blue, 80%)
        aside
          width auto
          i
            color $base03
        div.description
          margin-top 5px
          text-align left
          h3
            font-weight 400
            font-size 1.1em

      @media print
        margin-bottom 10px
        page-break-inside avoid

  section.info
    display flex
    @media screen and (max-width 768px)
      display block
      li
        margin 4px 0
    div
      flex 1
      font-family type-karla

  section.cover, section.open_source
    padding-right 30%
    text-align justify

    @media(max-width 768px)
      padding-right 0
      text-align left

  section.skills
    > ul
      display flex
      > li
        margin-right 30px
        flex 1
        &:last-child
          margin 0
      @media screen and (max-width 768px)
        display block
        > li
          margin 0 0 10px
    i
      font-style normal
      float right
      font-size 1.2em
      letter-spacing 2px
      color $blue

  footer
    margin-top 60px
    padding 5px 0
    color alpha(#000, .6)
    font-size .8em
    code
      background alpha($base03, .2)
    a
      color inherit
      &:after
        background alpha($base3, .4)
    ul
      display flex
      justify-content space-between
      flex-wrap wrap
      i
        position relative
        left 2px
    code.kthx
      display block
      background none
      margin 5px auto 0
      width 30px
      opacity .4

    @media print
      display none
